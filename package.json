{
    "name": "reactapp",
    "version": "0.0.0",
    "description": "React/Node sandbox",
    "main": "app.js",
    "engines": {
        "node": "8.9.4",
        "npm": "5.6.0"
    },
    "scripts": {
        "start": "node bin/www",
        "server": "nodemon bin/www --ignore client/",
        "client": "npm run start --prefix client",
        "build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
        "heroku-postbuild": "npm run build",
        "dev": "concurrently \"npm run server\" \"npm run client\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CountryGuide/React-Sandbox.git"
    },
    "author": "Ivan Yakovlev",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/CountryGuide/React-Sandbox/issues"
    },
    "homepage": "https://github.com/CountryGuide/React-Sandbox#readme",
    "dependencies": {
        "axios": "^0.18.0",
        "body-parser": "^1.18.2",
        "compression": "^1.7.2",
        "concurrently": "^3.5.1",
        "cookie-parser": "^1.4.3",
        "cookie-session": "^2.0.0-beta.3",
        "express": "^4.16.3",
        "heroku-ssl-redirect": "0.0.4",
        "mongoose": "^5.0.14",
        "morgan": "^1.9.0",
        "passport": "^0.4.0",
        "passport-google-oauth20": "^1.0.0",
        "redis": "^2.8.0"
    },
    "devDependencies": {
        "create-react-app": "^1.5.2",
        "nodemon": "^1.17.3"
    }
}
